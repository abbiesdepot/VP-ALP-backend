generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int         @id @default(autoincrement())
  username       String      @db.VarChar(100)
  email          String      @unique @db.VarChar(150)
  password       String      @db.VarChar(100)
  current_streak Int?        @default(0)
  total_focus_time Int?      @default(0)
  created_at     DateTime    @default(now())

  schedules      Schedule[]
  rewards        UserReward[]
  progress       UserProgress?

  @@map("users")
}

model Schedule {
  id                 Int                 @id @default(autoincrement())
  date               DateTime            @db.Date
  total_tasks        Int                 @default(0)
  completed_tasks    Int                 @default(0)
  progress_percentage Float              @default(0)
  created_at         DateTime            @default(now())

  user_id            Int
  user               User                @relation(fields: [user_id], references: [id], onDelete: Cascade)

  tasks              Task[]
  activities         ScheduleActivity[]

  @@map("schedules")
}

model Task {
  id           Int        @id @default(autoincrement())
  title        String     @db.VarChar(255)
  deadline     DateTime   @db.Timestamp
  is_completed Boolean    @default(false)
  created_at   DateTime   @default(now())

  schedule_id  Int
  schedule     Schedule   @relation(fields: [schedule_id], references: [id], onDelete: Cascade)

  @@map("tasks")
}

model ScheduleActivity {
  id           Int       @id @default(autoincrement())
  icon_name    String    @db.VarChar(150)
  start_time   DateTime  @db.Time
  end_time     DateTime  @db.Time
  description  String?   @db.Text
  color        String?   @db.VarChar(50)
  created_at   DateTime  @default(now())
  is_valid_today Boolean @default(true)
  isCompleted  Boolean   @default(false)

  schedule_id  Int
  schedule     Schedule  @relation(fields: [schedule_id], references: [id], onDelete: Cascade)

  @@map("schedule_activities")
}

model RewardDefinition {
  id           Int            @id @default(autoincrement())
  trigger_type RewardTrigger
  threshold    Int
  title        String         @db.VarChar(150)
  description  String?        @db.VarChar(255)
  asset_url    String?        @db.VarChar(255)
  created_at   DateTime       @default(now())

  user_rewards UserReward[]

  @@unique([trigger_type, threshold])
  @@map("reward_definitions")
}

model UserReward {
  id                    Int              @id @default(autoincrement())
  status                RewardStatus     @default(LOCKED)
  achieved_at           DateTime?

  user_id               Int
  user                  User             @relation(fields: [user_id], references: [id], onDelete: Cascade)

  reward_definition_id  Int
  reward_definition     RewardDefinition @relation(fields: [reward_definition_id], references: [id], onDelete: Cascade)

  @@unique([user_id, reward_definition_id])
  @@map("user_rewards")
}

model UserProgress {
  user_id              Int      @id
  current_streak       Int      @default(0)
  last_completion_date DateTime?
  task_completed_count Int      @default(0)
  last_daily_completion DateTime?

  user                 User     @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@map("user_progress")
}

enum RewardTrigger {
  STREAK
  TASK_COUNT
  DAILY_COMPLETION
}

enum RewardStatus {
  LOCKED
  UNLOCKED
}

